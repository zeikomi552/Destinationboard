<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Destinationboard"
        xmlns:System="clr-namespace:System;assembly=System.Runtime"
        xmlns:ViewModels="clr-namespace:Destinationboard.ViewModels"
        xmlns:hlp="clr-namespace:Destinationboard.Common.Helpers"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        hlp:DialogResultHelper.DialogResult="{Binding DialogResult, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
        x:Class="Destinationboard.MainWindow"
        mc:Ignorable="d"
        Title="メイン画面" Height="900" Width="800"
    >
    <Window.Resources>
        <ResourceDictionary Source="./Common/Themes/DestinationboardBaseThemes.xaml"/>
    </Window.Resources>

    <Window.DataContext>
        <ViewModels:MainWindowVM/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Margin="5,5,5,5" BorderThickness="2" BorderBrush="Black">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="{DynamicResource ButtonLargeFontSize}" Text="行動予定表" Grid.ColumnSpan="2"/>
                <TextBlock Margin="5" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Text="2021/03/21(日) 06:45"/>
            </Grid>
        </Border>

        <GroupBox Header="詳細" FontSize="{DynamicResource ButtonMiddleFontSize}" Grid.Row="1">
            <StackPanel>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button FontSize="{DynamicResource ButtonLargeFontSize}" Height="50" Margin="5" Content="氏名">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="Click">
                                <b:CallMethodAction TargetObject="{Binding}" MethodName=""/>
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </Button>
                    <Button FontSize="{DynamicResource ButtonLargeFontSize}" Height="50" Margin="5" Grid.Column="1" Content="行先"/>
                    <Button FontSize="{DynamicResource ButtonLargeFontSize}" Height="50" Margin="5" Grid.Column="2" Content="時間"/>
                    <Button FontSize="{DynamicResource ButtonLargeFontSize}" Height="50" Margin="5" Grid.Column="3" Content="備考" />
                </Grid>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
